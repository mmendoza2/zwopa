<h1>Editing estado</h1>

<div class="row">
  <div id="formrow">

        <%= form_for(@estado, :html => { :multipart => true }) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>


            <%= f.label :estado %>
            <%= f.text_field :estado %>

            <%= f.label :descripcion %>
            <%= f.text_area :descripcion %>

            <%= f.label :imagen %>
            <%= f.file_field :photo %>

            <%= f.submit "Sube tu estado", class: "btn btn-large btn-primary" %>

        <% end %>
  </div>
</div>


  <%= link_to 'Show', @estado %> |
<%= link_to 'Back', estados_path %>
