

<ul >

  <% @micrositios.limit(20).order("RANDOM()").each do |x| %>


          <div class="thumbnail">
            <div class="caption">
              <%  x.followers.limit(20).order("RANDOM()").each do |y|  %>


                  <div>
                    <% if y.photo_file_name.blank?  %>
                        <% if y.avatar.blank?  %>
                            <%= link_to image_tag("http://imagenes.notelimites.s3.amazonaws.com/users/default_user.png", class: "avatarchico"), y %>
                        <%	 else %>
                            <%= link_to image_tag(y.avatar, class: "avatarchico" ), y %>
                        <% end %>
                    <% else %>
                        <%= link_to image_tag(y.photo.url(:square), class: "avatarchico"), y %>
                    <%	 end %>
                  </div>


                  <h4><%= y.name %></h4>
                  <p>is now following <%= x.name %>  </p>





                      <% if x.photo_file_size? %>
                          <%= link_to (image_tag x.photo.url(:medium)), x, class: "img-responsive", alt: "responsive image" %>
                          <div style="font-weight: bold; overflow: hidden"><%= link_to x.name, x		  %> </div>
                      <% else %>
                          <%= link_to (image_tag "https://s3.amazonaws.com/imagenes.notelimites/micrositios/photos/sitios/big/#{x.photo_file_name}"),x, class: "img-responsive", alt: "responsive image" %>
                          <div style="font-weight: bold; overflow: hidden"><%= link_to x.name, x		  %> </div>
                      <% end %>

                  <h3><%= x.name %></h3>
                  <p>...</p>

              <% end %>
            </div>
          </div>


  <% end %>



</ul>
